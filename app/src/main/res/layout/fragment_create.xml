<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/createPostMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@color/secondary_color">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_color="@color/dark_gray"
        app:civ_border_width="1dp"
        android:background="@drawable/user_icon"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/userProfileImage"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/createNameTv"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Username"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textColor="@color/black"/>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/profileDevider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/dogInfo"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        app:dividerColor="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/dogInfo"
        android:layout_below="@id/userProfileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/off_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dogPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/dark_secondary_color"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_bg"/>

        <EditText
            android:id="@+id/dogName"
            android:layout_toRightOf="@id/dogPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:hint="Dog Name"
            android:textSize="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/dogAge"
            android:layout_toRightOf="@id/dogPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dogName"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:hint="Age"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/dogGender"
            android:layout_toRightOf="@id/dogPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dogAge"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:hint="Gender"
            android:maxLines="1"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/descriptionED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_below="@id/profileDevider"
        android:maxLength="200"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textColorHint="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />
        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/descriptionED">

            <ImageButton
                android:id="@+id/likeBtn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/like" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentBtn"
                android:src="@drawable/comment"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionBar"
            android:text="100 likes"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/postCreateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingHorizontal="80dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="10dp"
        android:text="Create"
        android:textColor="@color/primary_color"
        android:textSize="23dp"
        android:backgroundTint="@color/secondary_color"
        android:layout_below="@id/createPostMenu"/>

</RelativeLayout>
