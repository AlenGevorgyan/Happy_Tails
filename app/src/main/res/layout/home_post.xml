<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_color">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/post_user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/user_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/usernameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_toRightOf="@id/post_user_image"
            android:layout_marginStart="25dp"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <!-- Dog's Profile Picture -->
        <ImageView
            android:id="@+id/post_picture_home"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/user_icon"
            android:contentDescription="Dog profile picture" />

        <!-- Dog's Name -->
        <TextView
            android:id="@+id/dog_name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Dog Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Dog's Sex -->
        <TextView
            android:id="@+id/dog_sex_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sex: Male"
            android:textSize="16sp" />

        <!-- Dog's Estimated Age -->
        <TextView
            android:id="@+id/dog_age_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Estimated Age: 3 years"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vet_last_visit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:visibility="gone" />

        <!-- Supporters List -->
        <TextView
            android:id="@+id/supporters_list_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John, Sarah, Alex"
            android:textSize="14sp" />

        <!-- Monthly Funding Progress Bar -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Monthly Funding"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/funding_bar_home"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="75"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_custom" />

        <!-- Button to View Gallery -->
        <Button
            android:id="@+id/gallery_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Gallery" />

        <!-- Button to View Veterinary Page -->
        <Button
            android:id="@+id/veterinary_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Veterinary Page" />

        <!-- Button to Donate -->
        <Button
            android:id="@+id/donation_button_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Donate Now" />

    </LinearLayout>

</LinearLayout>