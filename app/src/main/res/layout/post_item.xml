<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/UserprofileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_color="@color/dark_gray"
        app:civ_border_width="1dp"
        android:background="@drawable/user_icon"
        android:layout_margin="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/UserprofileImage"
        android:gravity="center_vertical"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nameTv"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Username"/>

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h"
            android:textColor="@color/black"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/dogInfo"
        android:layout_below="@id/UserprofileImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/off_white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dogPicAdapter"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="@color/dark_secondary_color"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_bg"/>

            <TextView
                android:id="@+id/dogNameAdapter"
                android:layout_toRightOf="@id/dogPicAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Dog Name"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dogAgeAdapter"
                android:layout_toRightOf="@id/dogPicAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dogNameAdapter"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="Age"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dogGender"
                android:layout_toRightOf="@id/dogPicAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dogAgeAdapter"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:text="Gender"
                android:textSize="18dp"
                android:textStyle="bold"/>

    </RelativeLayout>


    
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dogInfo">

        <ImageButton
            android:layout_marginHorizontal="@+id/postAdapterLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeBtnAdapter"
            android:src="@drawable/like"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentBtnAdapter"
            android:src="@drawable/comment"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/postAdapterLikeCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionBar"
        android:text="100 likes"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>


</RelativeLayout>