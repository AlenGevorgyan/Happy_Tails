<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dog's Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/user_icon"
        android:contentDescription="Dog profile picture" />

    <!-- Dog's Name -->
    <TextView
        android:id="@+id/dog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Dog Name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Dog's Sex -->
    <TextView
        android:id="@+id/dog_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sex: Male"
        android:textSize="16sp" />

    <!-- Dog's Estimated Age -->
    <TextView
        android:id="@+id/dog_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Estimated Age: 3 years"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/vet_last_visit_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:visibility="gone" />

    <!-- Supporters List -->
    <TextView
        android:id="@+id/supporters_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="John, Sarah, Alex"
        android:textSize="14sp" />

    <!-- Monthly Funding Progress Bar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Monthly Funding"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/funding_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="75"
        android:max="100"
        android:progressDrawable="@drawable/progress_bar_custom" />

    <!-- Button to View Gallery -->
    <Button
        android:id="@+id/gallery_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="View profile" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/profileDevider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="20dp"
        app:dividerColor="@color/gray" />

</LinearLayout>